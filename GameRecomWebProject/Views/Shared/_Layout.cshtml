<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameRecomWebProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GameRecomWebProject.styles.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand bg-dark m-0 p-0">
        <div class="container-fluid">
            <a class="navbar-brand text-white" href="https://localhost:7119">Ne Oynasam?</a>
        </div>


    </nav>

    <div class="container-fluid m-0 p-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>


    <footer class="bg-dark p-3 m-0 fixed-bottom">
        <div class="container-fluid">
            <a href="https://rawg.io/apidocs" style="text-align:right; color:white; font-size:15px; display:block">-Veriler RAWG Database'den alınmıştır.</a>
        </div>
        
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js">></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
