
@{
    ViewData["Title"] = "Ne Oynasam?";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        .box1{
            width:600px;
            height:350px;
            background: rgb(0,0,0);
            background: linear-gradient(90deg, rgba(0,0,0,1) 0%, rgba(117,117,117,1) 100%);
            border: 20px solid red;
            margin: 0;
            position: absolute;
            top: 45%;
            left: 50%;
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
                    }
        html{
            background-image: url('https://i.imgur.com/XCBHFws.jpeg');
            height: 100vh;
            width: 100%;
            background-repeat:no-repeat;
        }

        #boxBaslik{
            color:antiquewhite;
            text-align:center;
            font-size:1px;
            letter-spacing:0.01px;
            font: small-caps bold 32px/1 sans-serif;
               
        }

        #boxAciklama{
            color: #e6e6e6;
            text-align:center;
            font-size:20px;

        }

        #btn::before{
            content:'';
            position:absolute;
            top:0;
            left:0;
            bottom:0;
            right:0;
            z-index:-1;
            background-color: red;
            
            transition:transform 300ms ease-in-out;
            transform:scaleX(0);
            transform-origin:left;
        }

        #btn:hover::before,
        #btn:focus::before{
            transform:scaleX(1);
        }

        #btn{
            z-index:1;

        }
    </style>

</head>
<body style="overflow:hidden">
    
    <div class="container-fluid m-0 p-0">
        
            <div class="box1">
                <br /><br />
                <p id="boxBaslik" >Analize Başla</p><br />
                <p id="boxAciklama">Bu site, size soru sorarak verdiğiniz cevaplara göre beğenebileceğiniz video oyunları önerir.</p>
                <br />
                <button type="button" class="btn btn-light position-relative start-50 translate-middle" id="btn" onclick="window.location.replace('https://localhost:44339/app/questions')">Başla</button>
            </div> 
        
    </div>
    
</body>


